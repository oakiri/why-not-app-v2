rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isStaff() {
      return request.auth != null && (
        request.auth.token.role == 'master' || 
        request.auth.token.role == 'employee' || 
        request.auth.token.role == 'admin'
      );
    }
    
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isUnder5MB() {
      return request.resource.size < 5 * 1024 * 1024;
    }
    
    function isUnder10MB() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // User profile images
    match /users/{userId}/profile/{fileName} {
      allow read: if true;
      allow write: if isOwner(userId) && isImage() && isUnder5MB();
      allow delete: if isOwner(userId) || isStaff();
    }
    
    // Menu item images
    match /menu/{itemId}/{fileName} {
      allow read: if true;
      allow write, delete: if isStaff() && isImage() && isUnder10MB();
    }
    
    // Category images
    match /categories/{categoryId}/{fileName} {
      allow read: if true;
      allow write, delete: if isStaff() && isImage() && isUnder5MB();
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
