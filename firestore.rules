rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isMaster() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'master';
    }
    
    function isEmployee() {
      return isAuthenticated() && 
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['empleado', 'employee', 'admin'] || isMaster());
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'master']);
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId) || isEmployee();
      allow create: if isOwner(userId) && 
                      request.resource.data.role == 'cliente' &&
                      request.resource.data.uid == userId;
      allow update: if isOwner(userId) && 
                      request.resource.data.role == resource.data.role;
      allow update, delete: if isAdmin();
    }
    
    // Menu Items collection
    match /menuItems/{itemId} {
      allow read: if true;
      allow create, update, delete: if isEmployee();
    }
    
    // Categories collection
    match /categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isEmployee();
    }
    
    // Orders collection
    match /orders/{orderId} {
      allow read: if isOwner(resource.data.userId) || isEmployee();
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.status == 'pending';
      allow update: if isOwner(resource.data.userId) && 
                      resource.data.status == 'pending' &&
                      request.resource.data.status == 'cancelled';
      allow update: if isEmployee();
      allow delete: if isAdmin();
    }
    
    // Reservations collection
    match /reservations/{reservationId} {
      allow read: if isOwner(resource.data.userId) || isEmployee();
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.status == 'pending';
      allow update: if isOwner(resource.data.userId) && 
                      resource.data.status == 'cancelled';
      allow update, delete: if isEmployee();
    }
    
    // Reviews collection
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
      allow delete: if isEmployee();
    }
    
    // Loyalty Points collection
    match /loyaltyPoints/{userId} {
      allow read: if isOwner(userId) || isEmployee();
      allow create, update: if isEmployee();
      allow delete: if isAdmin();
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isEmployee();
      allow update: if isOwner(resource.data.userId) && 
                      request.resource.data.read == true;
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Settings collection (app configuration)
    match /settings/{settingId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Analytics collection (for backoffice)
    match /analytics/{docId} {
      allow read: if isEmployee();
      allow write: if false;
    }
    
    // TPV Configuration (sensitive data)
    match /tpvConfig/{configId} {
      allow read, write: if isAdmin();
    }
    
    // Inventory/Stock
    match /inventory/{itemId} {
      allow read: if isEmployee();
      allow update: if isEmployee();
      allow create, delete: if isAdmin();
    }
    
    // Tables (for dine-in reservations)
    match /tables/{tableId} {
      allow read: if true;
      allow create, update, delete: if isEmployee();
    }
    
    // Promotions/Discounts
    match /promotions/{promotionId} {
      allow read: if true;
      allow create, update, delete: if isEmployee();
    }
    
    // Delivery Zones
    match /deliveryZones/{zoneId} {
      allow read: if true;
      allow create, update, delete: if isEmployee();
    }
    
    // Chat/Support Messages
    match /supportChats/{chatId} {
      allow read: if isOwner(resource.data.userId) || isEmployee();
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId) || isEmployee();
      allow delete: if isAdmin();
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
